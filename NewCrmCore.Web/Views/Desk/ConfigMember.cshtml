@using NewCrmCore.Infrastructure.CommonTools

@{
    Layout = "~/Views/Shared/_LayoutRoot.cshtml";
}
@section ChildrenCss
    {
        
    <link href="/css/webupload/webuploader.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        *, ::after, ::before {
            box-sizing: unset
        }
    </style>
}
@section SysCss
    {
    <link rel="stylesheet" href="/css/hoorayui/sys.css" />
}
<form action="/desk/modifymemberinfo" method="post" name="form" id="form">
    <input type="hidden" name="id" value="@Model.Id">
    <input type="hidden" name="membertype" value="@Model.MemberType" />
    <input type="hidden" id="isIconByUpload" name="isIconByUpload" value="@(Model.IsIconByUpload?1:0)" />
    <div class="creatbox">
        <div class="middle">
            <div class="input-label">
                <label class="label-text">应用图片：</label>
                <div class=" form-inline">
                    <div class="shortcutview">
                        <img src="@(Model.IsIconByUpload?NewCrmCore.Infrastructure.Appsetting.FileUrl+Model.IconUrl:Model.IconUrl)">
                    </div>
                    <div id="upload" class="ml-2 btn btn-outline-primary btn-sm">选择图片</div>
                    <div class="shortcut-selicon">
                        <div class="title">系统推荐的图标：</div>
                        <a href="###"><img src="/images/ui/system-gear.png" valsrc="/images/ui/system-gear.png"></a>
                        <a href="###"><img src="/images/ui/system-users.png" valsrc="/images/ui/system-users.png"></a>
                        <a href="###"><img src="/images/ui/system-wrench.png" valsrc="/images/ui/system-wrench.png"></a>
                        <a href="###"><img src="/images/ui/system-star.png" valsrc="/images/ui/system-star.png"></a>
                        <a href="###"><img src="/images/ui/system-shapes.png" valsrc="/images/ui/system-shapes.png"></a>
                        <a href="###"><img src="/images/ui/system-chart-bar.png" valsrc="/images/ui/system-chart-bar.png"></a>
                        <a href="###"><img src="/images/ui/system-document-edit.png" valsrc="/images/ui/system-document-edit.png"></a>
                        <a href="###"><img src="/images/ui/system-documents.png" valsrc="/images/ui/system-documents.png"></a>
                        <a href="###"><img src="/images/ui/system-mail.png" valsrc="/images/ui/system-mail.png"></a>
                        <a href="###"><img src="/images/ui/system-puzzle.png" valsrc="/images/ui/system-puzzle.png"></a>
                    </div>
                    <input type="hidden" name="val_icon" id="val_icon" value="@Model.IconUrl" datatype="*" nullmsg="请选择或上传应用图片">
                    <span class="help-inline"></span>
                </div>
            </div>
            <div class="input-label">
                <label class="label-text">应用名称：</label>
                <div class=" form-inline ">
                    <input type="text" class="text form-control" name="val_name" value="@Model.Name" />
                    <span class="help-inline"></span>
                </div>
            </div>
            <div class="input-label">
                <label class="label-text">窗口大小：</label>
                <div class=" form-inline  ">
                    <div class="input-group mb3">
                        <div class="input-group-prepend ">
                            <span class="input-group-text">宽</span>
                        </div>
                        <input type="text" name="val_width" value="@Model.Width" class="form-control" style="width: 40px" datatype="n" nullmsg="请输入应用宽高" errormsg="宽高数值不规范">
                        <div class="input-group-prepend ">
                            <span class="input-group-text">px</span>
                        </div>
                    </div>

                    <div class="input-group mb3">
                        <div class="input-group-prepend " style="margin-left: 10px">
                            <span class="input-group-text">高</span>
                        </div>
                        <input type="text" name="val_height" value="@Model.Height" class="form-control" style="width: 40px" datatype="n" nullmsg="请输入应用宽高" errormsg="宽高数值不规范">
                        <div class="input-group-prepend ">
                            <span class="input-group-text">px</span>
                        </div>
                    </div>

                    <span class="help-inline"></span>
                </div>
            </div>
            <div class="input-label input-label-isresize">
                <label class="label-text">窗口是否拉伸：</label>
                <div class=" form-inline  ">
                    <label class="radio" style="margin-right: 10px">
                        <input type="radio" name="val_isresize" value="1" @{if (Model.IsResize) { <text> checked="checked" </text>  }}>是
                    </label>
                    <label class="radio">
                        <input type="radio" name="val_isresize" value="0" @{ if (!Model.IsResize) { <text> checked="checked" </text>  } }>否
                    </label>
                </div>
            </div>
            <div class="input-label input-label-isopenmax" @{ if (!Model.IsResize) { <text> style="display: none" </text>  } }>
                <label class="label-text">打开默认最大化：</label>
                <div class=" form-inline ">
                    <label class="radio" style="margin-right:10px"><input type="radio" name="val_isopenmax" value="1" @{if (Model.IsOpenMax) { <text> checked="checked" </text>  }}>是</label>
                    <label class="radio"><input type="radio" name="val_isopenmax" value="0" @{if (!Model.IsOpenMax) { <text> checked="checked" </text>  }}>否</label>
                </div>
            </div>
            <div class="input-label input-label-isflash" @{ if (!Model.IsFlash) { <text> style="display: none" </text>  } }>
                <label class="label-text">是否为Flash：</label>
                <div class=" form-inline ">
                    <label class="radio" style="margin-right: 10px">
                        <input type="radio" name="val_isflash" value="1" @{if (Model.IsFlash) { <text> checked="checked" </text>  }}>是
                    </label>
                    <label class="radio" style="margin-right: 10px">
                        <input type="radio" name="val_isflash" value="0" @{if (!Model.IsFlash) { <text> checked="checked" </text>  }}>否
                    </label>
                    <span class="txt">[<a href="###" rel="tooltip" title="如何设置为Flash应用，当窗口非当前窗口时，会显示遮罩层">?</a>]</span>
                </div>
            </div>
        </div>
    </div>
    <div class="bottom-bar">
        <div class="con">
            <a class="btn btn-secondary btn-sm fr" href="javascript:window.parent.$.dialog.list['editdialog'].close();"><i class="icon-remove"></i> 关闭</a>
            <a class="btn btn-primary btn-sm fr" id="btn-submit" href="###" style="margin-right: 10px"><i class="icon-white icon-ok"></i> 确定</a>
        </div>
    </div>
    <input type="hidden" id="uploadUrl" value="@(NewCrmCore.Infrastructure.Appsetting.UploadUrl)" >
    <input type="hidden" id="memberId" value="@Model.Id" >
     <input type="hidden" id="userId" value="@Model.UserId" >
</form>
@section ScriptLabel
{
    <script src="/js/webupload/webuploader.min.js"></script>
    <script src="~/js/pagelogic/desk_configmember.js"></script>    
}
