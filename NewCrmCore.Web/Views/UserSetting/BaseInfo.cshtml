@model NewCrmCore.Dto.UserDto

<div class="input-label">
    <label class="label-text">用户名：</label>
    <div class="label-box form-inline">@Model.Name</div>
</div>
<div class="input-label">
    <label class="label-text">注册时间：</label>
    <div class="label-box form-inline">@Model.AddTime</div>
</div>
<div class="input-label">
    <label class="label-text">最近一次登录时间：</label>
    <div class="label-box form-inline">
        @Model.LastLoginTime
        <a href="/usersetting/index?target=usersafe" class="btn btn-link">如果不是你登录的，请及时修改密码</a>
    </div>
</div>
<div class="input-label">
    <label class="label-text">最近一次登录IP：</label>
    <div class="label-box form-inline">@(Context.Request.HttpContext.Connection.RemoteIpAddress.ToString()== "::1" ? "127.0.0.1" : Context.Request.HttpContext.Connection.RemoteIpAddress.ToString())</div>
</div>
<div class="input-label">
    <label class="label-text">用户头像</label>
    <div class="label-box form-inline">
        <div class="startmenu-avatar" title="点击修改头像">
            <img src="@Model.UserFace" style="cursor:pointer" />
            <a href="###" id="upload" class="btn btn-mini btn-back" >点击修改头像</a>
        </div>
    </div>
</div>
