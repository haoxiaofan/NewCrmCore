
<div style="width:630px;margin:0 auto;text-align:center;margin-top:20px">
	<p id="swfContainer">本组件需要安装Flash Player后才可使用，请从<a href="http://www.adobe.com/go/getflashplayer">这里</a>下载安装。</p>
    <input type="hidden" id="token" value="@(await TimeToken.GetTokenAsync())">
</div>
<script src="~/js/fullAvatarEditor-2.3/scripts/swfobject.js"></script>
<script src="~/js/fullAvatarEditor-2.3/scripts/fullAvatarEditor.js"></script>
<script>

    swfobject.addDomLoadEvent(function () {
        var swf = new fullAvatarEditor('/js/fullAvatarEditor-2.3/fullAvatarEditor.swf', '/js/fullAvatarEditor-2.3/expressInstall.swf', 'swfContainer', {
            id: 'swf',
            upload_url: '@(NewCrmCore.Infrastructure.Appsetting.UploadUrl)?accountId=@Model.Id&uploadtype=face', //上传接口
            method: 'post', //传递到上传接口中的查询参数的提交方式。更改该值时，请注意更改上传接口中的查询参数的接收方式
            src_upload: 0, //是否上传原图片的选项，有以下值：0-不上传；1-上传；2-显示复选框由用户选择
            avatar_box_border_width: 0,
            avatar_sizes: '120*120|48*48|24*24',
            avatar_sizes_desc: '120*120像素|48*48像素|24*24像素',
            avatar_tools_visible: false,
            avatar_box_border_width: 1
        }, function (msg) {
            switch (msg.code) {
                case 1:
                    break;
                case 2:
                    break;
                case 3:
                    break;
                case 5:
                    if (msg.type == 0) {
                        var token = $('#token').val()
                        HROS.request.post('/AccountSetting/ModifyFace?token='+token, { accountFace: msg.content.avatarUrls }, function (responseText) {
                            if (responseText.IsSuccess) {
                                NewCrm.msgbox.success('账户头像上传成功');
                                window.parent.HROS.startmenu.getAvatar();
                            } else {
                                NewCrm.msgbox.fail('账户头像保存失败');
                            }
                        })
                    } else {
                        NewCrm.msgbox.fail('账户头像上传失败');
                    }
                    break;
            }
        }
        );
    });

</script>