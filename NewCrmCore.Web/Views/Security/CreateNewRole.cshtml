@using NewCrmCore.Dto
@using NewCrmCore.Infrastructure.CommonTools
@{
    Layout = "~/Views/Shared/_LayoutRoot.cshtml";

    var roleResult = ViewData["RoleResult"] as RoleDto;
    if (roleResult == null)
    {
        roleResult = new RoleDto();
    }

    var roleId = Context.Request.Query["roleId"];
}
@section ChildrenCss
    {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            box-sizing: unset;
        }
    </style>
}
@section SysCss
    {
    <link rel="stylesheet" href="/css/hoorayui/sys.css" />
}
<form action="/security/createrole?roleId=@roleId" method="post" id="form" name="form">
    <div class="creatbox">
        <input type="hidden" name="token" value="@(await TimeToken.GetFormTokenAsync())" />
        <input type="hidden" id="roleId" name="roleId" value="@roleId" />
        <div class="middle" style="overflow: hidden; position: inherit; bottom: 0px;">
            <div class="input-label">
                <label class="label-text">角色名称：</label>
                <div class="form-inline">
                    @{
                        if (roleResult.Name == null)
                        {
                            <text>
                                <input type="text" class="text form-control" name="val_roleName" id="val_roleName" ajaxurl="@Url.Action("CheckName","Security")" value="" datatype="s2-10" nullmsg="请输入角色名称" errormsg="角色名称长度为2-10个字符" />
                            </text>
                        }
                        else
                        {
                            <text>
                                <input type="text" class="text form-control" name="val_roleName" id="val_roleName" ajaxurl="@Url.Action("CheckName","Security")" value="@roleResult.Name" datatype="s2-10" nullmsg="请输入角色名称" errormsg="角色名称长度为2-10个字符" />
                            </text>
                        }
                    }

                    <span class="help-inline"></span>
                </div>
            </div>
            <div class="input-label">
                <label class="label-text">角色标识：</label>
                <div class="form-inline">
                    @{
                        if (roleResult.RoleIdentity == null)
                        {
                            <text>
                                <input type="text" class="text  form-control" name="val_roleIdentity" id="val_roleIdentity" ajaxurl="@Url.Action("CheckRoleIdentity","Security")" value="" datatype="s2-20" nullmsg="请输入角色标识" errormsg="角色标识长度为2-20个字符" />
                            </text>
                        }
                        else
                        {
                            <text>
                                <input type="text" disabled="disabled" class="text  form-control" name="val_roleIdentity" id="val_roleIdentity" value="@roleResult.RoleIdentity" datatype="s2-20" nullmsg="请输入角色标识" errormsg="角色标识长度为2-20个字符" />
                            </text>
                        }
                    }
                    <span class="help-inline"></span>
                </div>
            </div>

        </div>
    </div>
    <div class="bottom-bar">
        <div class="con">
            <a class="btn btn-primary fr" id="btn-submit" href="###"><i class="oi oi-check"></i> 确定</a>
            <a class="btn fr" href="javascript:window.parent.closeDetailIframe();" style="margin-right: 10px"><i class="oi oi-chevron-top"></i> 返回角色列表</a>
        </div>
    </div>
</form>
@section ChildrenScript
    {
    <script src="~/js/pagelogic/security_createnewrole.js"></script>
    NewCrm.Security.CreateNewRole.roleId='@roleId'
}

