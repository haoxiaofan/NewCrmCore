@{
    Layout = "~/Views/Shared/_LayoutRoot.cshtml";
}
@section ChildrenCss
    {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 10px 10px 0;
        }
    </style>
}
@section SysCss
    {
    <link rel="stylesheet" href="/css/hoorayui/sys.css" />
}
<div style="margin-bottom:10px;background-color:#f5f5f5;border:1px solid #e3e3e3;min-height:20px;padding:9px">
    <div class="form-inline">
        <label>角色名称：</label>
        <input type="text" name="roleName" id="roleName" class="span2 form-control">
        <a class="btn btn-primary" menu="search" href="###" style="margin-left:10px"><i class="oi oi-magnifying-glass"></i> 搜索</a>
        <a class="btn btn-primary ml-auto" href="javascript:openDetailIframe('/Security/CreateNewRole');"><i class="oi oi-plus"></i> 创建新角色</a>
    </div>
</div>
<table class="list-table">
    <thead>
        <tr class="toolbar">
            <td colspan="100">
                <b style="margin: 0 10px">符合条件的记录</b>有<font class="list-count">0</font>条
            </td>
        </tr>
        <tr class="sep-row"><td colspan="100"></td></tr>
        <tr class="col-name">
            <th style="width:35%">角色标识</th>
            <th style="width: 35%">角色名称</th>
            <th style="width: 35%">操作</th>
        </tr>
        <tr class="sep-row"><td colspan="100"></td></tr>
    </thead>
    <tbody class="list-con"></tbody>
    <tfoot>
        <tr>
            <td colspan="100">
                <div style="margin-top:10px">
                    <nav id='pagination' aria-label="Page navigation example"></nav>
                    <input id="pagination_setting" type="hidden" per="15">
                </div>
            </td>
        </tr>
    </tfoot>
</table>

<div id="detailIframe" style="background:#fff;position:fixed;z-index:1;top:-100px;left:0;width:100%;height:100%;display:none">
    <iframe frameborder="0" style="width:100%;height:100%"></iframe>
</div>
@section ChildrenTemplate
    {
    <script id="table-template" type="text/x-handlebars-template">
        {{#each Model}}
        <tr class="list-bd">
            <td style="text-align:left;padding-left:15px">{{RoleIdentity}}</td>
            <td style="text-align:left;padding-left:15px">{{Name}}</td>
            <td>
                <a href="javascript:openDetailIframe('/Security/CreateNewRole?roleId={{Id}}');" class="btn btn-link">编辑</a>
                <a href="###" class="btn btn-link do-del" data-roleid="{{Id}}">删除</a>
                <a class="btn btn-link" href="javascript:openDetailIframe('/Security/AttachmentPower?roleId={{Id}}');">附加权限</a>
            </td>
        </tr>
        {{/each}}
    </script>
}
@section ScriptLabel
{
    <script src="~/js/pagelogic/security_index.js"></script>
}


